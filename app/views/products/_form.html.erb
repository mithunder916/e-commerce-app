<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br  />

  <%= f.label :price %>
  <%= f.number_field :name %><br  />

  <%= f.label :description%>
  <%= f.text_area :description %><br  />

  <%= f.label :quantity %>
  <%= f.number_field :quantity %><br  />

  <%= f.label :address %>
  <%= f.text_field :address %><br  />

  <%= f.label "Condition" %>
  <%= f.collection_select(:condition_id, Condition.all, :id, :status) %><br  />

  <%= f.label "Category" %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %><br  />

  <%= f.number_field :user_id, value: current_user.id %>

  <%= f.submit %>

  <% end %>
